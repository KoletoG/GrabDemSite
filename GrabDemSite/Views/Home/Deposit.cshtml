@model UserDataModel
    <meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<head>
  <link rel="stylesheet" href="~/css/Deposit.css" asp-append-version="true">
  <link rel="stylesheet" href="~/css/LoadingScreen.scss" asp-append-version="true" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true"/><script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        $("#mena").hide();
        $("#mena").show(2000);
    });

</script>
</head>
@ViewBag.ErrorSum
<body>
                <div id="mena" class="container shadow-lg w-75 border-bottom border-top mt-5 mb-5">
    <form asp-controller="Home" class="text-center" asp-action="TryDeposit" asp-route-id="@Model.Id">
       <h3 class="mt-3 display-5 text-warning">Enter a sum you want to deposit: </h3>
      <input type="number" placeholder="0" name="money" class="text-dark mt-3 h4 text-center rounded-3 w-25">
       <br />
                <h2 class="h5 text-center mt-5 fst-italic">
                    Deposits might take up to several hours to be completed</h2>
       <button type="submit" class="btn-lg btn-warning shadow-sm mt-2 mb-5 fs-2">Submit</button>
       <h3 class="text-dark mt-5 mb-3" >Your balance: <span class="text-warning">@Model.Balance $</span></h3>
                
    </form>
    </div>
    </body>

@model UserDataModel
    <meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<head>
  <link rel="stylesheet" href="~/css/Deposit.css" asp-append-version="true">
  <link rel="stylesheet" href="~/css/LoadingScreen.scss" asp-append-version="true" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true"/>
</head>
@ViewBag.ErrorSum
<body>
    <form asp-controller="Home" asp-action="TryDeposit" asp-route-id="@Model.Id">
       <label class="txtdep">Enter a sum you want to deposit: </label>
       <br />
       <input type="number" class="inputmon" name="money" />
       <br />
       <button type="submit" class="button1">Submit</button>
    </form>
    <h3>Your balance: @Model.Balance.ToString("0.00") $</h3>
    <img src="~/Images/Levels.png" class="img1"/>
    </body>

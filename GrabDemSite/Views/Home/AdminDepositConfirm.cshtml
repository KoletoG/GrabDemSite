@model DepositDataModel
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
<div class="container shadow-lg w-75 border-bottom border-top mt-5 mb-5 text-center">
    @{
        decimal sum = 0;
        List<DepositDataModel> deposits = ViewBag.Deposits;
        int b = 0;
        foreach(var deposit in deposits)
        {
            sum += deposit.Money;
        }
        UserDataModel user = new UserDataModel();
        user.Id = deposits[0].Id;
    }
    <h5 class="mt-5 display-4 mb-5">Whole sum to deposit: @sum</h5>
    <form asp-controller="Home" asp-action="AdminDepositConfirmed" asp-route-id="@user.Id">
        <button type="submit" class="btn-lg btn-warning shadow-sm mt-2 mb-5 fs-5">Confirm these deposits</button>
    </form>
</div>
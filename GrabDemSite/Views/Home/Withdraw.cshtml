@model UserDataModel
<header>
    <link rel="stylesheet" href="~/css/Withdraw.css" asp-append-version="true"/>
    <meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true"/>
    
</header>
@{
    <body>
        @ViewBag.ErrorBal
        @ViewBag.ErrorRef
        @ViewBag.ErrorNoMoney
                <div class="container shadow-lg w-75 border-bottom border-top mt-5 mb-5">
                <form class="text-center" asp-controller="Home" asp-action="TryWithdraw" asp-route-id="@Model.Id">
                <h1 class="mt-3 display-5 text-warning">Enter a sum you want to withdraw:</h1>
                <input type="number" placeholder="0" name="money" class="text-dark mt-3 h4 text-center rounded-3 w-25">
                <br/>
                <h2 class="h5 text-center mt-5 fst-italic">
                    Withdraws happen in 1 to 3 days,
                    depending on which country you are in.
                    Fees - 6%</h2>
                <button type="submit" class="btn-lg btn-warning shadow-sm mt-2 mb-5 fs-2">Submit</button>
                <h3 class="text-dark mt-5 mb-3" >Your balance: <span class="text-warning">@Model.Balance $</span></h3>
                
                </form></div>
    </body>
}
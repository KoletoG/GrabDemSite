@using GrabDemSite.Models.DataModel
@model UserDataModel
<header>
    <meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true"/>
    <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        $("#mena").hide();
        $("#mena").show(1000);
    });

</script>
</header>
@{
    <body>
        @ViewBag.ErrorBal
        @ViewBag.ErrorRef
        @ViewBag.ErrorNoMoney
                <div id="mena" class="container shadow-lg w-75 border-bottom border-top mt-5 mb-5">
                <form class="text-center" asp-controller="Home" asp-action="TryWithdraw" asp-route-id="@Model.Id" >
                <h1 class="text-dark fst-italic mt-3">You want to withdraw: </h1>
                <input type="number" class="mt-3 display-6 text-dark text-center" name="money">
                <br/>
                <h2 class="h5 text-center mt-5 fst-italic">
                    Withdraws happen in 1 to 3 days,
                    depending on which country you are in.
                    Fees - 6%</h2>
                <button type="submit" class="btn-lg btn-warning shadow-sm mt-2 mb-5 fs-2">Submit</button>
                <h3 class="text-dark mt-5 mb-3" >Your balance: <span class="text-warning">@Model.Balance $</span></h3>
                
                </form></div>
    </body>
}
@using GrabDemSite.Models.DataModel
@model DepositDataModel
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
<link href="~/js/site.js" asp-append-version="true"/><script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        $("#mena").hide();
        $("#mena").show(1000);
    });

</script>
<div id="mena" class="container shadow-lg w-75 border-bottom border-top mt-5 text-center mb-5">
<h3 class="mt-3 display-5 text-warning">Send to this wallet: </h3>
<br />
<h2 class="mb-5 h2 text-dark display-6 fst-italic" id="wallet">@ViewBag.Wallet</h2>
<form asp-controller="Home" asp-action="TryTheDeposit" asp-route-userid=@Model.User.Id asp-route-id="@Model.Id" asp-route-money="@Model.Money">
    <button type="submit" class="btn-lg btn-warning shadow-sm mt-2 mb-5 fs-2">I made the payment</button>
</form>
</div>
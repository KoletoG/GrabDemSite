@using GrabDemSite.Models.ViewModel
@using GrabDemSite.Models.DataModel
@model EditViewModel
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
@{
	decimal sum = 0;
	foreach (var deposit in Model.Deposits)
	{
		sum += deposit.Money;
	}
	<br />
}
<div class="text-center container shadow-lg w-50 border-bottom border-top mt-5 mb-5">
	<label asp-for="User.UserName" class="text-warning display-6 mt-2">@Model.User.UserName</label>
	<br />
	<label asp-for="User.WalletAddress" class="h3 fst-italic">@Model.User.WalletAddress</label>
	<br />
	<form asp-controller="Home" asp-action="Edit" asp-route-id="@Model.User.Id" method="post">
		<label class="text-dark h5">Person has deposited: @sum $</label>
		<br />
		<input placeholder="@sum" name="balance" class="text-dark mt-3 h4 text-center rounded-3 w-25" />
		<br />
		@Html.AntiForgeryToken()
		<label asp-for="User.MoneySpent" class="h5 fst-italic">Person has spent: @Model.User.MoneySpent</label>
		<br />
		<button type="submit" class="btn-lg btn-warning shadow-sm mt-2 mb-4 fs-5">Confirm edit</button>
	</form>
</div>
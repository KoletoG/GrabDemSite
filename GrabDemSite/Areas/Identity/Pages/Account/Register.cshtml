@page
@model RegisterModel
<div class="alignreg">
    @if (ViewData["ErrorU"] == "Username already in use")
    {
        <h2 class="text-danger fs-5">Username already in use</h2>
    }@if (ViewData["ErrorE"] == "Email already in use")
    {
        <h2 class="text-danger fs-5">Email already in use</h2>
    }
    <div class="container shadow-lg w-75 border-bottom border-top mt-5 text-center mb-5 w-25">

        <form id="registerForm" class="mt-3" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="user-box">
                <label asp-for="Input.Email" class="text-dark display-5"></label><br />
                <span asp-validation-for="Input.Email" class="fs-5 text-danger"></span>
                <br />
                <input asp-for="Input.Email" class="text-dark border-2 mt-2 mb-3 rounded-3 fs-3 text-center" autocomplete="username" aria-required="true" />

            </div> <div class="user-box">
                <label asp-for="Input.UserName" class="text-dark display-5"></label><br />
                <span asp-validation-for="Input.UserName" class="fs-5 text-danger"></span><br />
                <input asp-for="Input.UserName" class="text-dark border-2 mt-2 mb-3 rounded-3 fs-3 text-center" autocomplete="username" aria-required="true" />
            </div>
            <div class="user-box">
                <label asp-for="Input.Password" class="text-dark display-5"></label><br />
                <span asp-validation-for="Input.Password" class="fs-5 text-danger"></span><br />
                <input asp-for="Input.Password" class="text-dark border-2 mt-2 mb-3 rounded-3 fs-3 text-center" autocomplete="new-password" aria-required="true" />

            </div>
            <div class="user-box">
                <label asp-for="Input.ConfirmPassword" class="text-dark display-5"></label><br />
                <span asp-validation-for="Input.ConfirmPassword" class="fs-5 text-danger"></span>
                <br />
                <input asp-for="Input.ConfirmPassword" class="text-dark border-2 mt-2 mb-3 rounded-3 fs-3 text-center" autocomplete="new-password" aria-required="true" />

            </div>

            <div class="user-box">
                <label asp-for="Input.InviteWithLink" class="text-dark display-5"></label><br />
                <span asp-validation-for="Input.InviteWithLink" class="fs-5 text-danger"></span><br />
                <input asp-for="Input.InviteWithLink" class="text-dark border-2 mt-2 mb-3 rounded-3 fs-3 text-center" autocomplete="new-password" aria-required="true" />

            </div>
            <div class="login-box">
                <input class="btn-lg btn-warning shadow-sm mt-3 mb-4 fs-1" type="submit" value="Register">
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
